<% content_for :footer do %>
<script type="text/javascript">
  $(function(){
    $('.trigger-choose-version').live('click', function(){
      $('.mayhideshow').addClass('hide');
      var idPanelPlanning = $(this).data('target');
      $('.trigger-choose-version').parent().removeClass('active');
      $(this).parent().addClass('active');
      $('.'+idPanelPlanning).removeClass('hide');
      $('.showactive').html(idPanelPlanning);
    });
  });
</script>
<% end %>
