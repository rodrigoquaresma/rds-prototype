<% content_for :pagetitle do %>
  DataGroup CSS Component
<% end %>

<% content_for :pagesubtitle do %>
  <div class="row">
    <div class="col-xs-9">
      <h2><span class="text-muted">Exemplo</span> <span class="showactive">automacao-de-marketing</span></h2>
    </div>
    <div class="col-xs-3 action-header">
      <div class="btn-group pull-right">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          escolha o exemplo <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li class="active"><a class="trigger-choose-version" href="#" data-target="automacao-de-marketing">automação de marketing</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="base-de-leads">base de leads</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="campanhas">campanhas</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="landing-page">landing page</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="lead-scoring-fit">lead scoring - perfil</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="lead-scoring-home">lead scoring - home</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="lead-scoring-interest">lead scoring - interesse</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="marketing-bi-campanhas">marketing bi - campanhas</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="marketing-bi-canais-de-aquisicao">marketing bi - canais de aquisição</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="marketing-bi-negocios-planejamento">marketing bi - negócios/planejamento</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="marketing-bi-negocios-resultados">marketing bi - negócios/resultados</a></li>
          <li><a class="trigger-choose-version" href="#" data-target="painel-de-palavras-chave">painel de palavras chave</a></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

